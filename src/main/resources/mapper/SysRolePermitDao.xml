<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cat.admin.modules.dao.SysRolePermitDao">

    <resultMap type="com.cat.admin.modules.entity.SysRolePermit" id="SysRolePermitMap">
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
        <result property="permitId" column="permit_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRolePermitMap">
        select
          role_id, permit_id
        from c1_admin.sys_role_permit
        where role_id = #{roleId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRolePermitMap">
        select
          role_id, permit_id
        from c1_admin.sys_role_permit
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysRolePermitMap">
        select
          role_id, permit_id
        from c1_admin.sys_role_permit
        <where>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
            <if test="permitId != null and permitId != ''">
                and permit_id = #{permitId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="roleId" useGeneratedKeys="true">
        insert into c1_admin.sys_role_permit()
        values ()
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update c1_admin.sys_role_permit
        <set>
        </set>
        where role_id = #{roleId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from c1_admin.sys_role_permit where role_id = #{roleId}
    </delete>

</mapper>