<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cat.admin.modules.dao.SysPermitDao">

    <resultMap type="com.cat.admin.modules.entity.SysPermit" id="SysPermitMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="bizid" column="bizid" jdbcType="VARCHAR"/>
        <result property="parentId" column="parent_id" jdbcType="VARCHAR"/>
        <result property="resource" column="resource" jdbcType="VARCHAR"/>
        <result property="code" column="code" jdbcType="VARCHAR"/>
        <result property="handle" column="handle" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysPermitMap">
        select
          id, bizid, parent_id, resource, code, handle
        from c1_admin.sys_permit
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysPermitMap">
        select
          id, bizid, parent_id, resource, code, handle
        from c1_admin.sys_permit
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="SysPermitMap">
        select
          id, bizid, parent_id, resource, code, handle
        from c1_admin.sys_permit
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="bizid != null and bizid != ''">
                and bizid = #{bizid}
            </if>
            <if test="parentId != null and parentId != ''">
                and parent_id = #{parentId}
            </if>
            <if test="resource != null and resource != ''">
                and resource = #{resource}
            </if>
            <if test="code != null and code != ''">
                and code = #{code}
            </if>
            <if test="handle != null and handle != ''">
                and handle = #{handle}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into c1_admin.sys_permit(bizid, parent_id, resource, code, handle)
        values (#{bizid}, #{parentId}, #{resource}, #{code}, #{handle})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update c1_admin.sys_permit
        <set>
            <if test="bizid != null and bizid != ''">
                bizid = #{bizid},
            </if>
            <if test="parentId != null and parentId != ''">
                parent_id = #{parentId},
            </if>
            <if test="resource != null and resource != ''">
                resource = #{resource},
            </if>
            <if test="code != null and code != ''">
                code = #{code},
            </if>
            <if test="handle != null and handle != ''">
                handle = #{handle},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from c1_admin.sys_permit where id = #{id}
    </delete>

</mapper>